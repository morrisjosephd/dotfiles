### Alias - Git
alias st='git status'
alias lg='git log --color --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit --branches'
alias co='git checkout'
alias gc='git commit -m'

### Alias - NPM
alias npmglobal='npm list -g --depth=0'
alias npmoutdated='npm outdated -g --depth=0'
alias npmglobalfolder='cd /usr/local/lib/node_modules'
